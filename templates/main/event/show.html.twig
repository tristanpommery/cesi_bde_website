{% extends 'base.html.twig' %}

{% block title %}{{ event.name }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/main/event/styleEvent.css">
    <link rel="stylesheet" href="/assets/main/event/styleEventCard.css">
{% endblock %}

{% block header %}
    <div id="banner">
        <div id="bannerText">
            <h1 id="mainTitle">Évènements</h1>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div id="pageContent">
        <h2>Évènement n°{{ event.id }}</h2>
        <div id="event">
            <p id="eventName">{{ event.name }}</p>
            <p id="eventDay">Le {{ event.date|date('d/m/Y') }}</p>
            <p id="eventHour">à {{ event.date|date('H:i') }}</p>
            <p id="eventDuration">Durée: {{ event.duration }}</p>
            <p id="eventPrice">Entrée: {% if event.price == 0 %}Gratuite{% elseif event.price == 0.5 %}Fifty cents{% else %}{{ event.price }} €{% endif %}</p>
            <p id="eventLocalization">Lieu: {{ event.localization }}</p>
            {% if is_granted('ROLE_BDE') %}
                <a href="{{ path('event_user', {'id': event.id}) }}"><p id="eventParticipations">Listes des participants</p></a>
            {% else %}
                <p id="eventParticipations">Participants: {{ participatingCount }}</p>
            {% endif %}
            <p id="eventDescription">{{ event.description }}</p>
            {% if app.user %}
                {% if isParticipating %}
                    <a id="disapply" href="{{ path('event_disapply', {'id': event.id}) }}">Ne plus participer</a>
                {% else %}
                    <a id="apply" href="{{ path('event_apply', {'id': event.id}) }}">Participer</a>
                {% endif %}
            {% endif %}
            {% if event.image %}
                <img id="eventImage" src="{{ event.image }}" alt="eventImage">
            {% endif %}

            {% if is_granted('ROLE_BDE') %}
                <a id="editEvent" href="{{ path('event_edit', {'id': event.id}) }}">Modifier</a>
                {{ include('main/event/_delete_form.html.twig') }}
            {% endif %}


            {% if is_granted('ROLE_EMPLOYEE') %}
                <button type="button" id="editEvent" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Signaler</button>
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Signalement pour l'évènement : {{ event.name }}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">

                                <form action="{{ path('event_report', {'id': event.id}) }}">
                                    <div class="form-group">
                                        <label for="recipient-name" class="col-form-label">Signalement de {{ app.user.firstName }} {{ app.user.lastName }}</label>
                                    </div>
                                    <div class="form-group">
                                        <label for="message-text" class="col-form-label">Message:</label>
                                        <textarea name="report_message" class="form-control" id="message-text"></textarea>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                        <button type="submit" class="btn btn-primary">Signaler</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
        <a class="goBack" href="{{ path('shop') }}">Retour</a>
        <a class="goGallery" href="{{ path('gallery_event', {'id': event.id}) }}">Galerie</a>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
{% endblock %}
