<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}BDE CESI Strasbourg{% endblock %}</title>
        <link rel="stylesheet" href="/assets/styleBase.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block header %}{% endblock %}
        <nav id="nav">
            <div id="navList">
                <div class="navElement" id="search">
                    <form action={{ path('search') }}>
                        <input name="keyword" type="text" placeholder="Recherche">
                        <button type="submit"><i class="fas fa-search"></i></button>
                    </form>
                </div>
                {% if app.user %}
                <div class="navElement" id="profile"><a href="{{ path('user', {'id': app.user.id}) }}">{{ app.user.firstName }}</a></div>
                <div class="navElement" id="logout"><a href="{{ path('app_logout') }}">Déconnexion</a></div>
                {% else %}
                <div class="navElement" id="signup"><a href="{{ path('signup') }}">S'inscrire</a></div>
                <div class="navElement" id="login"><a href="{{ path('app_login') }}">Connexion</a></div>
                {% endif %}
                <div class="navElement" id="cart"><a href="{{ path('cart') }}"><i class="fas fa-shopping-cart"></i></a></div>
            </div>
        </nav>
        <i class="fas fa-bars" id="menuIcon"></i>
        <div id="sideMenu">
            <div class="menuElement" id="homeLink"><a href="{{ path('home') }}">Accueil</a></div>
            <div class="menuElement" id="eventsLink"><a href="{{ path('event_index') }}">Évènements</a></div>
            <div class="menuElement" id="associationsLink"><a href="{{ path('association_index') }}">Associations</a></div>
            <div class="menuElement" id="shopLink"><a href="{{ path('shop') }}">Boutique</a></div>
            {% if is_granted('ROLE_BDE') %}
            <div class="menuElement" id="adminLink"><a href="{{ path('admin_dashboard') }}">Admin</a></div>
            {% endif %}
            <div class="menuElement" id="networks">
                <div class="socialNetworks">
                    <a href="https://www.facebook.com/BDECESISTRAS/"><i class="fab fa-facebook-square"></i></a>
                    <a href="https://www.instagram.com/bdecesi.stras/"><i class="fab fa-instagram"></i></a>
                    <a href="https://discord.gg/z7ZNz7v"><i class="fab fa-discord"></i></a>
                </div>
            </div>
            <div class="menuElement" id="cesiLogo">
                <a href="https://www.cesi.fr/"><img src="/assets/pictures/logo-CESI-neg.png" alt="logo CESI"></a>
            </div>
        </div>
        {% block body %}{% endblock %}
        {% block footer %}
        <div id="footer">
            <a href="{{ path('legal') }}">Mentions légales</i></a>
        </div>
        {% endblock %}
        <script src="https://kit.fontawesome.com/f7c32aec99.js" crossorigin="anonymous"></script>
        <script src="/assets/base.js"></script>
        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        {% block javascripts %}
        {% endblock %}
        <script type="text/javascript" id="cookiebanner"
            src="https://cdn.jsdelivr.net/gh/dobarkod/cookie-banner@1.2.2/dist/cookiebanner.min.js"
            data-position="top" data-linkmsg="En savoir plus" data-moreinfo="{{ path('legal') }}"
            data-message="Nous utilisons des cookies pour améliorer votre expérience de navigation.">
        </script>
    </body>
</html>
